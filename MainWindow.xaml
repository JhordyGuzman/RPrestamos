<Window x:Class="RPrestamos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPrestamos"
        mc:Ignorable="d"
        Title="Menu Principal" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Menu Height="20" VerticalAlignment="Top">
            <MenuItem  Header="Registros">
                <MenuItem x:Name="RegistrosPersonas" Header="Registros Personas" Click="RegistrosPersonas_Click"></MenuItem>
                <MenuItem x:Name="RegistrosPrestamos" Header="Registros Prestamos" Click="RegistrosPrestamos_Click"></MenuItem>
                <MenuItem x:Name="RegistroMoras" Header="Registros Moras" Click="RegistrosMoras_Click"></MenuItem>

            </MenuItem>

            <MenuItem Header="Consultas">
            <MenuItem x:Name="ConsultasPersonas" Header="Consultas Personas" Click="ConsultasPersonas_Click"></MenuItem>
            <MenuItem x:Name="ConsultasPrestamos" Header="Consultas Prestamos" Click="ConsultasPrestamos_Click"></MenuItem>
        
            </MenuItem>
            </Menu>
        </StackPanel>

    </Grid>
</Window>
